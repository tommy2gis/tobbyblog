@model Blog.Model.User
@{
    ViewBag.Title = "添加用户";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="wrap">
    <div id="icon-users" class="icon32">
        <br>
    </div>
    <h2 id="add-new-user">添加新用户</h2>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="error below-h2">
            <p><strong>错误</strong>：@ViewBag.Message</p>
        </div>
    }
    <div id="ajax-response"></div>

    <p>新建用户账户，并将用户加入此站点。</p>
    <form method="post" name="createuser" id="createuser" class="validate">

        <table class="form-table">
            <tbody>
                <tr class="form-field form-required">
                    <th scope="row">
                        <label for="user_login">用户名 <span class="description">(必填)</span></label></th>
                    <td>
                        <input name="userName" type="text" id="user_login" value="" aria-required="true"></td>
                </tr>
                <tr class="form-field form-required">
                    <th scope="row">
                        <label for="email">电子邮件 <span class="description">(必填)</span></label></th>
                    <td>
                        <input name="email" type="text" id="email" value=""></td>
                </tr>
                <tr class="form-field form-required">
                    <th scope="row">
                        <label for="pass1">密码 <span class="description">(必填)</span></label></th>
                    <td>
                        <input class="hidden" value=" "><!-- #24364 workaround -->
                        <input name="Password" type="password" id="pass1" autocomplete="off">
                    </td>
                </tr>
                <tr class="form-field form-required">
                    <th scope="row">
                        <label for="pass2">再输入一次密码 <span class="description">(必填)</span></label></th>
                    <td>
                        <input name="rePassword" type="password" id="pass2" autocomplete="off">
                        <br>
                        <p class="description indicator-hint">提示：您的密码最好至少包含 7 个字符。为了保证密码强度，使用大小写字母，数字和符号，例如 ! " ? $ % ^ &amp; )。</p>
                    </td>
                </tr>
                <tr class="form-field">
                    <th scope="row">
                        <label for="role">角色</label></th>
                    <td>
                        <select name="role" id="role">
                            <option selected="selected" value="1">读者</option>
                            <option value="2">管理员</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
        <p class="submit">
            <input type="submit" name="createuser" id="createusersub" class="button button-primary" value="添加新用户">
        </p>
    </form>
</div>

<div class="clear"></div>
