@model Blog.WebUI.Models.LoginModel
@{
    Layout = "~/Views/Member/_MemberLayout.cshtml";
    ViewBag.Title = "忘记密码";
}
@using (Html.BeginForm("LostPassword", "Member", FormMethod.Post, new { id = "lostpasswordform", style = "position: static; left: 0px;" }))
{
    <p>
        <label for="user_login">
            用户名或电子邮件地址：<br>
            <input type="text" name="UserName" id="user_login" class="input" value="" size="20"></label>
    </p>
    <p class="submit">
        <input type="submit" name="wp-submit" id="wp-submit" class="button button-primary button-large" value="获取新密码">
    </p>
}
